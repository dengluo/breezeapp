<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="@android:color/black"
    n1:orientation="vertical">

    <TextView
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_centerInParent="true"
        n1:layout_margin="10.0dip"
        n1:background="@drawable/blue_border"
        n1:gravity="center"
        n1:padding="15.0dip"
        n1:text="@string/please_rate_your_pain"
        n1:textColor="@android:color/white"
        n1:textSize="22.0sp" />

    <ImageView
        n1:id="@+id/please_rate_pain_iv_ok"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_alignParentBottom="true"
        n1:layout_centerHorizontal="true"
        n1:layout_gravity="center"
        n1:src="@drawable/ok_button" />
</RelativeLayout>